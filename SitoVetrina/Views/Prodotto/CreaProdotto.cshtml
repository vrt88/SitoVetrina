@model SitoVetrina.Models.ProdottoViewModels.CreaProdottoViewModel
@{
    ViewData["Title"] = "CreaProdotto";
}
<div class="container">
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>  
    </div>
    <div class="row justify-content-center">
        <div class="col-8">
            <hr />
            <form id="Crea" method="post" action="CreaProdotto" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.NomeProdotto" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.NomeProdotto" class="form-label"></label>
                    <span asp-validation-for="Input.NomeProdotto" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <textarea asp-for="Input.Descrizione" class="form-control" autocomplete="username" aria-required="true" id="Textarea2" style="height:170px;max-height:200px" rows="3"></textarea>
                    <label asp-for="Input.Descrizione" class="form-label"></label>
                    <span asp-validation-for="Input.Descrizione" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.Prezzo" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Prezzo" class="form-label"></label>
                    <span asp-validation-for="Input.Prezzo" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input asp-for="Input.Immagine" class="form-control" autocomplete="username" aria-required="true" accept="image/jpeg,image/jpg,image/png"/>
                    <span asp-validation-for="Input.Immagine" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary mt-5">Crea</button>
                <div>
                    <h1 >@Model.alert</h1>
                </div>
            </form>
        </div>
    </div>
</div>
@section cerca{
    <form class="col-4 mb-3 mb-lg-0" role="search" action="/">
        <input asp-page="/" asp-route-id=@Model.testoRicerca asp-for=@Model.testoRicerca id="searchBar" type="text" class="form-control" placeholder="Search..." aria-label="Search">
    </form>
}

