@using Microsoft.AspNetCore.Identity
@using SitoVetrina.Areas.Identity.Data
@using SitoVetrina.Models
@using SitoVetrina.Context
@using SitoVetrina.Models.Operazioni
@using SitoVetrina.Models.ProdottoViewModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject DapperContext context
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SitoVetrina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SitoVetrina.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@200&display=swap" rel="stylesheet">
</head>
<body>
  <header class="p-3 mb-3 border-bottom bg-dark">
    <div class="container d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start gap-4">
        <div class="navbar-brand text-white text-center col-2"><h1>SitoVetrina</h1></div>
        <a class="navbar-brand text-white text-center col-1" asp-area="" asp-controller="Home" asp-action="Index"><h4>Home</h4></a>
        @if (User.IsInRole("Admin"))
        {
            <div class="vr text-white"></div>
            <a class="navbar-brand text-white text-center col-1" asp-area="" asp-controller="Prodotto" asp-action="CreaProdotto"><h4>Prodotto</h4></a>
        }
        @RenderSection("cerca", required: false);
        <partial name="_LoginPartial.cshtml"/>
        @if (User.IsInRole("User"))
        {
            <a asp-controller="Prodotto" asp-action="VisualizzaCarrello"><img style="width: 50px; height: 50px;" src="https://www.freeiconspng.com/thumbs/cart-icon/black-shopping-cart-icon-22.png"></a>
        }
    </div>
  </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
